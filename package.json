{
  "name": "itmoscript-syntax",
  "displayName": "ITMOScript Support",
  "publisher": "yourname",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Languages"
  ],
  "activationEvents": ["onLanguage:itmoscript"],
  "contributes": {
  "languages": [
    {
      "id": "itmoscript",
      "aliases": ["ITMOScript", "itmoscript"],
      "extensions": [".is"],
      "configuration": "./language-configuration.json"
    }
  ],
  "grammars": [
    {
      "language": "itmoscript",
      "scopeName": "source.itmoscript",
      "path": "./syntaxes/itmoscript.tmLanguage.json"
    }
  ],
  "configuration": {
    "type": "object",
    "properties": {
      "itmoscript.interpreterPath": {
        "type": "string",
        "description": "Путь до исполняемого интерпретатора ITMOScript"
      }
    }
  },
  "menus": {
    "editor/title": [
      {
        "command": "itmoscript.runCurrent",
        "when": "resourceLangId == itmoscript",
        "group": "navigation",
        "icon": "$(play)"
      }
    ]
  },
    "commands": [
    {
      "command": "itmoscript.runCurrent",
      "title": "Run ITMOScript",
      "category": "ITMOScript",
      "icon": "$(play)"
    }
  ]
},
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "typescript": "^4.4.3",
    "vscode": "^1.1.37",
    "@types/node": "^14.14.37"
  }
}